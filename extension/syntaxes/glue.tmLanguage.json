{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "glue",
	"scopeName": "source.glue",
	"patterns": [
		{
			"include": "#imports"
		},
		{
			"include": "#annotations"
		},
		{
			"include": "#decorators"
		},
		{
			"include": "#refs"
		},
		{
			"include": "#keywords"
		},
		{
			"include": "#types"
		},
		{
			"include": "#strings"
		},
		{
			"include": "#comments"
		}
	],
	"repository": {
		"imports": {
			"patterns": [
				{
					"name": "meta.import.glue",
					"begin": "^\\s*import\\b",
					"end": "$",
					"beginCaptures": {
						"0": {
							"name": "keyword.control.import.glue"
						}
					},
					"patterns": [
						{
							"name": "meta.import.named-list.glue",
							"begin": "\\{",
							"beginCaptures": {
								"0": {
									"name": "punctuation.definition.brace.begin.glue"
								}
							},
							"end": "\\}",
							"endCaptures": {
								"0": {
									"name": "punctuation.definition.brace.end.glue"
								}
							},
							"patterns": [
								{
									"name": "entity.name.type.imported.glue",
									"match": "\\b[A-Za-z_][A-Za-z0-9_]*\\b(?=\\s*(?:,|\\}|\\bas\\b))"
								},
								{
									"name": "entity.name.namespace.alias.glue",
									"match": "(?<=\\bas\\s+)[A-Za-z_][A-Za-z0-9_]*\\b"
								},
								{
									"name": "keyword.control.import.glue",
									"match": "\\bas\\b"
								},
								{
									"name": "punctuation.separator.comma.glue",
									"match": ","
								}
							]
						},
						{
							"name": "keyword.operator.wildcard.glue",
							"match": "\\*"
						},
						{
							"name": "entity.name.namespace.alias.glue",
							"match": "(?<=\\bimport\\s+\\*\\s+as\\s+)[A-Za-z_][A-Za-z0-9_]*\\b"
						},
						{
							"name": "string.quoted.double.import-path.glue",
							"begin": "\"",
							"end": "\"",
							"beginCaptures": {
								"0": {
									"name": "punctuation.definition.string.begin.glue"
								}
							},
							"endCaptures": {
								"0": {
									"name": "punctuation.definition.string.end.glue"
								}
							},
							"patterns": [
								{
									"name": "constant.character.escape.glue",
									"match": "\\\\."
								},
								{
									"name": "punctuation.separator.path.glue",
									"match": "[/\\.]"
								}
							]
						},
						{
							"name": "keyword.control.import.glue",
							"match": "\\b(from|as)\\b"
						},
						{
							"name": "punctuation.separator.comma.glue",
							"match": ","
						}
					]
				}
			]
		},
		"keywords": {
			"patterns": [
				{
					"name": "meta.type-alias.glue",
					"match": "^\\s*(type)\\s+([A-Za-z_][A-Za-z0-9_]*)\\s*=",
					"captures": {
						"1": {
							"name": "keyword.control.glue"
						},
						"2": {
							"name": "entity.name.type.alias.glue"
						}
					}
				},
				{
					"name": "keyword.control.glue",
					"match": "^\\s*(endpoint|model|response|enum|type)\\b"
				},
				{
					"match": "^\\s*(body|mime|status):",
					"captures": {
						"1": {
							"name": "markup.underline"
						}
					}
				}
			]
		},
		"decorators": {
			"patterns": [
				{
					"name": "support.variable",
					"match": "(@[a-zA-Z_][a-zA-Z0-9_]*)"
				}
			]
		},
		"types": {
			"patterns": [
				{
					"name": "storage.type.glue",
					"match": "\\b(any|int|float|string|bool)\\b"
				}
			]
		},
		"annotations": {
			"patterns": [
				{
					"name": "entity.name.function.annotation.glue",
					"match": "\\b(#\\[[^\\\"]*\\])\\b"
				}
			]
		},
		"strings": {
			"patterns": [
				{
					"name": "string.quoted.double.glue",
					"begin": "\"",
					"end": "\"",
					"patterns": [
						{
							"name": "constant.character.escape.glue",
							"match": "\\\\."
						}
					]
				}
			]
		},
		"refs": {
			"patterns": [
				{
					"name": "entity.name.type.glue",
					"match": "\\b[A-Z][a-zA-Z0-9_]*\\b"
				}
			]
		},
		"comments": {
			"patterns": [
				{
					"name": "comment.documentation.glue",
					"begin": "//",
					"end": "$"
				},
				{
					"name": "comment.documentation.glue",
					"begin": "///",
					"end": "$"
				}
			]
		}
	}
}