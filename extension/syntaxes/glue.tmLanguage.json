{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "glue",
	"scopeName": "source.glue",
	"patterns": [
		{
			"include": "#annotations"
		},
		{
			"include": "#decorators"
		},
		{
			"include": "#refs"
		},
		{
			"include": "#keywords"
		},
		{
			"include": "#types"
		},
		{
			"include": "#strings"
		},
		{
			"include": "#comments"
		}
	],
	"repository": {
		"keywords": {
			"patterns": [
				{
					"name": "keyword.control.glue",
					"match": "^\\s*(endpoint|model|response|enum)\\b"
				},
				{
					"match": "^\\s*(body|mime|status):",
					"captures": {
						"1": {
							"name": "markup.underline"
						}
					}
				}
			]
		},
		"decorators": {
			"patterns": [
				{
					"name": "support.variable",
					"match": "(@[a-zA-Z_][a-zA-Z0-9_]*)"
				}
			]
		},
		"types": {
			"patterns": [
				{
					"name": "storage.type.glue",
					"match": "\\b(int|string|bool)\\b"
				}
			]
		},
		"annotations": {
			"patterns": [
				{
					"name": "entity.name.function.annotation.glue",
					"match": "\\b(#\\[[^\\\"]*\\])\\b"
				}
			]
		},
		"strings": {
			"patterns": [
				{
					"name": "string.quoted.double.glue",
					"begin": "\"",
					"end": "\"",
					"patterns": [
						{
							"name": "constant.character.escape.glue",
							"match": "\\\\."
						}
					]
				}
			]
		},
		"refs": {
			"patterns": [
				{
					"name": "entity.name.type.glue",
					"match": "\\b[A-Z][a-zA-Z0-9_]*\\b"
				}
			]
		},
		"comments": {
			"patterns": [
				{
					"name": "comment.documentation.glue",
					"begin": "//",
					"end": "$"
				},
				{
					"name": "comment.documentation.glue",
					"begin": "///",
					"end": "$"
				}
			]
		}
	}
}