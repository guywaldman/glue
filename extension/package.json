{
  "name": "glue",
  "displayName": "Glue",
  "description": "Glue language support",
  "publisher": "guywaldman",
  "version": "0.0.6",
  "repository": {
    "type": "git",
    "url": "https://github.com/guywaldman/glue"
  },
  "engines": {
    "vscode": "^1.104.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "activationEvents": [
    "onLanguage:glue",
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "glue",
        "aliases": [
          "glue",
          "glue"
        ],
        "extensions": [
          ".glue"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "glue",
        "scopeName": "source.glue",
        "path": "./syntaxes/glue.tmLanguage.json"
      }
    ],
    "commands": [
      {
        "command": "glue.restart",
        "title": "Glue: Restart Language Server"
      },
      {
        "command": "glue.showLogs",
        "title": "Glue: Show Language Server Logs"
      }
    ]
  },
  "scripts": {
    "clean": "rimraf out lsp lsp.exe",
    "compile": "tsc -p .",
    "build:lsp": "cargo build -p lsp --release --manifest-path ../glue/Cargo.toml",
    "postbuild:lsp": "cp ../glue/target/release/lsp out/lsp && chmod +x out/lsp",
    "watch": "tsc -p . -w",
    "lint": "echo \"(add lint script)\"",
    "pretest": "npm run compile && npm run build:lsp",
    "test": "node ./out/test/runTest.js",
    "package": "npm run compile && npm run build:lsp && vsce package",
    "publish": "npm run compile && npm run build:lsp && vsce publish"
  },
  "dependencies": {
    "vscode-languageclient": "^9.0.1"
  },
  "private": true,
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "^24.5.2",
    "@types/vscode": "^1.104.0",
    "@vscode/test-electron": "^2.4.1",
    "glob": "^11.0.0",
    "mocha": "^11.1.0",
    "typescript": "^5.9.2"
  }
}
